<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundSrartcl"
    tools:context=".ui.Registro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/regNom"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Nombre"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
             />

        <EditText
            android:id="@+id/regTel"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Telefono"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
             />
        <EditText
            android:id="@+id/regTelii"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Telefono"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/regDirecc"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="DirecciÃ³n"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/regmail"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Email"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/regpues"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Puesto"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/regsal"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Salario"
            android:textColorHint="@color/secondaryDarkColor"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/reghora"
            style="@style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edito"
            android:hint="Horario"
            android:textColorHint="@color/secondaryDarkColor"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/btnguardar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/redondo"
            android:textColor="@color/bacgroundEnd"
            android:layout_marginTop="25dp"
            android:textSize="10sp"
            android:elevation="10dp"
            android:text="Guardar"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>