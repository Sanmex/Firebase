<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_height="96dp"
    android:id="@+id/card"
    app:strokeWidth="1dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/layito"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview"
        android:padding="8dp">
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/sol"
            android:layout_marginRight="8dp" />
        <TextView
            android:id="@+id/testo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:layout_toEndOf="@+id/image_view"
            android:layout_toRightOf="@+id/image_view"
            style="@style/TextAppearance"
            android:textColor="@color/bacgroundEnd"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/testo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linea 2"
            style="@style/TextAppearance"
            android:layout_toEndOf="@+id/image_view"
            android:layout_below="@+id/testo1"
            android:textColor="@color/bacgroundEnd"
            android:layout_toRightOf="@+id/image_view" />
        <TextView
            android:id="@+id/testo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linea 2"
            style="@style/TextAppearance"
            android:textColor="@color/bacgroundEnd"
            android:layout_toEndOf="@+id/image_view"
            android:layout_toRightOf="@+id/image_view"
            android:layout_below="@id/testo2"
            />

        <TextView
            android:id="@+id/cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/testo3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="288dp"
            android:layout_marginRight="288dp"
            android:layout_toEndOf="@+id/image_view"
            android:layout_toRightOf="@+id/image_view"
            android:text="Cita" />






    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>